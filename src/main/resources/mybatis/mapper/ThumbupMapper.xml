<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jones.panorama.mapper.ThumbupMapper" >
    <select id="findCount" resultType="java.lang.Integer" parameterType="Query">
        select count(1) from thumbup
        where 1=1
        <if test="query != null and query.hotspotCode != null and query.hotspotCode !=''">
            and hotspotCode = #{query.hotspotCode}
        </if>
        <if test="query != null and query.sceneCode != null and query.sceneCode !=''">
            and sceneCode = #{query.sceneCode}
        </if>
    </select>
    <insert id="insert" parameterType="Thumbup">
        insert into thumb(hotspot_code, thumbup, content, user_id, inserttime)
        values(#{hotspotCode}, #{thumbUp}, #{content}, #{user.userId}, now())
    </insert>
    <delete id="delete" parameterType="java.lang.Integer">
        delete from thumbup comment_id=#{thumbupId}
    </delete>
</mapper>