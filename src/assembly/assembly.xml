<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!-- <id>release</id> -->
    <id>dataifs-webetl</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <!-- dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>/</outputDirectory>
        </dependencySet>
    </dependencySets> -->

    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <excludes>
                <exclude>src/main/resources/templates</exclude>
                <exclude>logback.xml</exclude>
            </excludes>
            <outputDirectory>resources</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/panorama-${version}.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>panorama.jar</destName>
        </file>
        <!--<file>-->
            <!--<source>src/main/resources/application.properties</source>-->
            <!--<outputDirectory>/</outputDirectory>-->
            <!--<destName>application.properties</destName>-->
        <!--</file>-->
        <file>
            <source>bin/start.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>start.sh</destName>
        </file>
    </files>
</assembly>